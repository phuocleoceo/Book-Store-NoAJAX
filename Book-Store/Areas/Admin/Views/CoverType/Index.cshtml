@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "CoverType";
}
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Cover Type List</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-action="Upsert">
            <i class="fas fa-plus"></i> &nbsp;
            Create New Cover Type
        </a>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="covertype-table" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Cover Type Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ct in Model)
            {
                <tr>
                    <td>@ct.Name</td>
                    <td>
                        &nbsp; &nbsp; &nbsp; &nbsp;
                        <a asp-action="Upsert" asp-route-id="@ct.Id" class="btn btn-success text-white" style="cursor:pointer">
                            <i class="fas fa-edit"></i>
                        </a> &nbsp; &nbsp;
                        <a asp-action="Delete" asp-route-id="@ct.Id" class="btn btn-danger text-white"
                           data-toggle="modal" data-id="@ct.Id"
                           data-target="#delete-modal"
                           style="cursor:pointer">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center">
    <a href="/Admin/CoverType/Upsert/id" class="btn btn-success text-white" style="cursor:pointer">
        <i class="fas fa-edit"></i>
    </a> &nbsp;
    <a class="btn btn-danger text-white" style="cursor:pointer">
        <i class="fas fa-trash-alt"></i>
    </a>
</div>

@{
    var path = "/admin/covertype/delete/";
}
<partial name="_DeleteFormSubmit" model="@path" />

@section Scripts{
    <script>
        $(function () {
            $("#covertype-table").dataTable();
        })
    </script>
}